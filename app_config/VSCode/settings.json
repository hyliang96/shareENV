        //     "cursorEndSelect",
        //     // "editor.action.clipboardCopyAction",
        //     // "cancelSelection"
        //     "cursor"
        // ]
    },

    // settings sync 插件的设置
    "sync.gist": "7f497183a1c14bd331355ae017b323a4",
    "sync.autoUpload": true,
    "sync.autoDownload": true,
    "sync.quietSync": true,
    "sync.forceDownload": false,
    "search.useGlobalIgnoreFiles": true,

