sub(){
    if [ -d /Applications/Sublime\ Text.app ]; then
        # 本地是Mac，且有sublime
        open -a "/Applications/Sublime Text.app" $*
    else
        local dirs=""
        local arg=
        for arg in $@; do
            if [ -e $arg ]; then
                local path_arg=$(abspath $arg)
                dirs="$dirs; $path_arg"
            else
                echo not exist: $arg
            fi
        done
        if [ "${dirs:0:2}" = "; " ]; then
            dirs=${dirs:2}
        fi
        if [ "$dirs" != "" ]; then
            echo "remote open: sub; $USER; `hostname`; $dirs"
        fi
    fi
